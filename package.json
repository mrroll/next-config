{
  "name": "@mrroll/next-config",
  "version": "13.221.0",
  "license": "MIT",
  "engines": {
    "node": ">=16.10.0"
  },
  "repository": "https://github.com/mrroll/next-config",
  "author": "mrroll",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*.js"
  },
  "files": [
    "/lib/**/*"
  ],
  "scripts": {
    "build": "npm-run-all --sequential build:clean build:typescript build:alias",
    "build:alias": "tsc-alias --project tsconfig.build.json --verbose",
    "build:clean": "rimraf ./lib",
    "build:typescript": "cross-env NODE_ENV=production TZ=UTC tsc --project tsconfig.build.json",
    "dev": "npm-run-all --parallel dev:watch dev:build",
    "dev:build": "cross-env NODE_ENV=development TZ=UTC nodemon --config nodemon.build.json",
    "dev:watch": "cross-env NODE_ENV=development TZ=UTC nodemon --config nodemon.json ./src/dev.ts"
  },
  "volta": {
    "node": "18.17.1",
    "yarn": "1.22.19"
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "css-loader": "^6.8.1",
    "ts-deepmerge": "^6.2.0"
  },
  "devDependencies": {
    "@mrroll/eslint-config-typescript": "^0.233.0",
    "@tsconfig/node18": "^18.2.1",
    "@types/node": "^18.17.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "next": "^13.4.19",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^4.4.1",
    "tsc-alias": "^1.8.7",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3",
    "webpack": "^5.88.2",
    "yalc": "^1.0.0-pre.53"
  }
}
